[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[user]
#    name  = 
#    email = 
[alias]
    a = add
    br = branch
    brl = branch -avv
    c = commit
    d = diff
    ca = commit -am
    co = checkout
    f = fetch
    l = log --oneline --graph --decorate
    m = merge -s recursive -X patience
    rb = rebase -s recursive -X patience
    pl = pull
    pr = pull --rebase
    ps = push
    r = remote
    rl = remote -v
    s = status
    sm = submodule
    cp = cherry-pick
    resetsm = !git sm foreach 'git co -- .'
    assume = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed = !git ls-files -v | grep ^h | cut -c 3-
[color]
    ui = auto
[merge]
    tool = vimdiff
[diff]
    algorithm = patience
    tool = difftastic
    external = difft
[difftool]
    prompt = false
[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"
[pager]
    difftool = true
[core]
    editor = vim
    quotepath = false
	excludesfile = ~/.gitignore_global
[push]
    default = upstream
    followTags = true
[pull]
    ff = only
[svn]
    rmdir = true
[credential]
	helper = cache
[gc]
    autoDetach = false
[includeIf "gitdir:~/work/**"]
    path = ~/.gitconfig_work
[init]
    defaultBranch = master
