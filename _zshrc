#!/bin/zsh

# if [ -z "$DISPLAY" ] && [ $(tty) = /dev/tty1 ]; then
if [ "$(fgconsole 2> /dev/null)" = 1 ]; then
  if [ -x "$HOME/.local/bin/dwm" ]; then
    startx
    logout
    # (startx &); logout
    # (startx xfce &); logout
  fi
fi

active_rbenv()
{
  export PATH="$HOME/.rbenv/bin:$PATH"
  export RUBY_BUILD_SKIP_MIRROR=1
  export RUBY_BUILD_CACHE_PATH=$HOME/.local/unix
  eval "$(rbenv init -)"
}

