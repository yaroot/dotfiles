active_asdf() {
  source $HOME/.asdf/asdf.sh
  source $HOME/.asdf/completions/asdf.bash
}

active_ghcup() {
  export PATH=$HOME/.ghcu/bin:$PATH
}

active_nix() {
  source $HOME/.nix-profile/etc/profile.d/nix.sh
}

pgcli() { $HOME/.local/opt/pyenv/pgcli/bin/pgcli $@ }
