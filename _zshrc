#!/bin/zsh

# if [ -z "$DISPLAY" ] && [ $(tty) = /dev/tty1 ]; then
if [ "$(fgconsole 2> /dev/null)" = 1 ]; then
  if [ -x "$HOME/.local/bin/dwm" ]; then
    startx
    logout
    # (startx &); logout
    # (startx xfce &); logout
  fi
fi

export SBT_OPTS='-Xms512m -Xmx512m -Xss1m -XX:+CMSClassUnloadingEnabled -XX:MaxPermSize=384m -XX:ReservedCodeCacheSize=192m'

source $HOME/.dotfiles/zshrc

