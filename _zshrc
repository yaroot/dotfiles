#!/bin/zsh

# if [ -z "$DISPLAY" ] && [ $(tty) = /dev/tty1 ]; then
if [ "$(fgconsole 2> /dev/null)" = 1 ]; then
  if [ -x "$HOME/.local/bin/dwm" ]; then
    startx
    logout
    # (startx &); logout
    # (startx xfce &); logout
  fi
fi

export PATH="$HOME/.cabal/bin:$PATH"
export PATH="$HOME/.rbenv/bin:$PATH"
export PATH="$HOME/.local/n/bin:$PATH"

export N_PREFIX="$HOME/.local/n"
export PATH="$N_PREFIX/n/current/bin:$PATH"
export NODE_PATH="$N_PREFIX/n/current/lib/node_modules" # npm -g root

export VIRTUAL_ENV_DISABLE_PROMPT=1
source $HOME/.local/python/env/27/bin/activate

source $HOME/.dotfiles/zshrc

eval "$(npm completion 2>/dev/null)"
eval "$(rbenv init -)"

