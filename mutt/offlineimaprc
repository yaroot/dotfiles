remoterepository = gmail-remote
maxsyncaccounts = 2
maxconnections = 3

[Repository gmail-local]
type = Maildir
localfolders = ~/.mail/mymail

[Repository gmail-remote]
type = Gmail
remoteuser = user@gmail.com
remotepass = passwd
realdelete = no
