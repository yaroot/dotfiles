
# A list of keys is in /usr/include/X11/keysym.h and in
# /usr/include/X11/keysymdef.h
# The XK_ is not needed.

# "scrot -e 'mv $f ~/ 2>/dev/null'"
#     Mod4 + Shift + x

# "dmenu_run `cat $HOME/.dmenurc`"
#     Mod4 + p

"i3-dmenu-desktop"
    Mod4 + Shift + p

"xfce4-screenshooter"
    Mod4 + x

#"xfce4-screenshooter --save $HOME --region"
"maim -s $HOME/Screenshot_`date -Iseconds`.png"
    Mod4 + Shift + x

#"xfce4-screenshooter --save $HOME --fullscreen"
"maim $HOME/Screenshot_`date -Iseconds`.png"
    Mod4 + Control + x

"sleep 5s && maim $HOME/Screenshot_`date -Iseconds`.png"
    Mod4 + Alt + x

"maim -s | xclip -selection clipboard -t image/png"
    Mod4 + Shift + Alt + x

"xfce4-terminal"
    Mod4 + Control + slash

## pluma / mousepad
"leafpad"
    Mod4 + Shift + slash


